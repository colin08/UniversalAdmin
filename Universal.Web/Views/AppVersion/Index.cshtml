    @section foot
{
        @Scripts.Render("~/bundles/laypage")
        <script type="text/javascript">
            $(document).ready(function (e) {
                pageData(1, false)
            });

            /*******************列表 end *************************/
            //分页方法
            function pageData(page_index) {
                $.ajax({
                    type: "post",
                    url: "/AppVersion/VersionData",
                    data: { "page_size": $("#select_page_size").val(), "page_index": page_index, "keyword": $("#txt_search").val() },
                    async: false, //同步请求
                    datatype: "json",
                    beforeSend: function () {
                        //Loading....
                    },
                    complete: function () {
                        //Loading Complete
                    },
                    success: function (data) {
                        if (data.msg == 0) {
                            alert(data.msgbox);
                            return;
                        }

                        $("#listData").html("");
                        var dataHtml = "";
                        $.each(data.data, function (i, item) {
                            var logo = "";
                            var down_url = "";
                            if (item.Platforms == 1)
                            {
                                logo = item.LogoImg;
                                down_url = item.DownUrl;
                            }
                            else
                            {
                                down_url = item.LinkUrl;
                                logo = "/uploads/logo.png";
                            }

                            dataHtml += "<tr>";
                            dataHtml += "<td><input class=\"all_checked_but\" type=\"checkbox\" hid=\"" + item.ID + "\" /></td>"
                            dataHtml += "<td><img src=\"" + logo + "\" width='40' height='40' /></td>";
                            dataHtml += "<td><i class=\"" + item.PlatformsLog + "\"></i></td>";
                            dataHtml += "<td>" + item.PlatformsStr + "</td>";
                            dataHtml += "<td>" + ChangeDateFormat(item.AddTime, "") + "</td>";
                            dataHtml += "<td>" + ConvertBtteToMB(item.Size) + "</td>";
                            dataHtml += "<td><div class=\"tbOpare\"><a target=\"_blank\" href=\"" + down_url + "\" class=\"aDown\"><i class=\"i-downR\"></i></a><a href=\"/AppVersion/Modify?id=" + item.ID + "\" class=\"aEdt\"><i class=\"i-edt\"></i></a><a href=\"javascript:void(0);\" onclick=\"del(" + item.ID + ")\" class=\"aDel\"><i class=\"i-barrel\"></i></a></div></td>";
                            dataHtml += "</tr>";
                        });
                        if (data.data.length == 0) {
                            dataHtml += "<tr><td colspan=\"10\"><p style='text-align:center;font-size:16px;'>没有相关数据</p></td><tr>";
                        }
                        $("#span_data_total").text(data.total);
                        $("#listData").html(dataHtml);
                        //$("#pager").show();
                        //$("#pager").pager({ pagenumber: page_index, pagecount: data.data.PageTotal, totalcount: data.data.DataTotal, buttonClickCallback: PageClick });
                        //显示分页
                        laypage({
                            cont: 'pager', //容器。值支持id名、原生dom对象，jquery对象。【如该容器为】：<div id="page1"></div>
                            pages: data.msgbox, //通过后台拿到的总页数
                            curr: page_index || 1, //当前页
                            groups: 7, //连续显示分页数
                            skip: true, //是否开启跳页
                            jump: function (obj, first) { //触发分页后的回调
                                if (!first) { //点击跳页触发函数自身，并传递当前页：obj.curr
                                    pageData(obj.curr);
                                }
                            }
                        });

                    },
                    error: function () {
                        alert("加载失败");
                    }
                })
            }
            /*******************列表 end *************************/

            

            function del(id) {
                var ids = "";
                if (id == 0) {
                    $(".all_checked_but").each(function () {
                        if ($(this).is(':checked')) {
                            ids = ids + $(this).attr("hid") + ","
                        }
                    })
                    if (ids == "") {
                        alert("请先选中要删除的数据");
                        return;
                    }
                    ids = ids.substring(0, ids.length - 1);
                }
                else {
                    ids = id;
                }
                $.ajax({
                    type: "post",
                    url: "/AppVersion/DelVersion",
                    data: { "ids": ids },
                    async: false,
                    beforeSend: function () {

                    },
                    complete: function () {

                    },
                    success: function (data) {
                        if (data.msg == 1) {
                            pageData(1);
                        }
                        else {
                            alert(data.msgbox);
                        }
                    },
                    error: function () {
                        alert("操作失败，请检查网络");
                    }
                })
            }
        </script>

    }
    <!--底部脚本 end-->
