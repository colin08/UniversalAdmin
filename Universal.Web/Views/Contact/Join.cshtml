<!-- Body Begin -->

    <div class="main page_join">
        <div class="main-content">
            <div class="sz-banner page-container-min-width">
            </div>
            <div class="page-container-width bgcolor">
                <div class="page-mid">
                    <ul class="list clearfix">

                        @foreach (var item in Model.job_list)
                        {
                            <li>
                                <img src="@(WorkContext.WebSiteConfig.SiteUrl+item.ImgUrl)">
                                <div class="box">
                                    <span class="out-mid" onclick="location.href='/Contact/Job?id=@item.GetBase64ID'">
                                        <i class="box-line"></i><br>
                                        @item.Title
                                        <i class="box-line box-line-u"></i>
                                    </span>
                                </div>
                            </li>
                        }

                        
                    </ul>
                    <div class="bnt-box">
                        <i-button>查看更多</i-button>
                    </div>
                </div>
            </div>
        </div>
    </div>    

