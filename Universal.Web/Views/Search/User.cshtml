
@{
    ViewBag.Title = "搜索结果-用户";
    ViewData["tabTop"] = "null";
}

<!--头部脚本-->
@section head
{
<link href="~/Assets/js/plugins/pace/pace.css" rel="stylesheet" />
}
<!--头部脚本 end-->

<div class="search-head mb_20">
    <div class="search-head-bd">
        <div class="search-page">
            <input type="text" id="txt_search" value="@ViewData["word"]"  onkeydown="KeyDown('pageData(1)')" /><a href="javascript:;" class="btn-search" onclick="pageData(1)">搜索</a>
        </div>
        <div class="clearfix">
            <ul class="new-tab clearfix">
                <li><a href="javascript:;" onclick="tab_click('Project')">项目</a></li>
                <li><a href="javascript:;" onclick="tab_click('Document')">秘籍</a></li>
                <li><a href="javascript:;" onclick="tab_click('Notice')">公告</a></li>
                <li class="current"><a href="javascript:;" onclick="tab_click('User')">同事</a></li>
            </ul>
            <span class="fr f14">搜索 和 <strong class="red" id="show_search_word"></strong> 相关的同事，共<strong class="red" id="show_search_total">0</strong>个结果</span>
        </div>
    </div>
</div>
<div class="search-con clearfix">

    <table border="0" cellspacing="0" cellpadding="0" class="table1 search-border">
       <thead>
           <tr>
               <th width="10%">头像</th>
               <th width="20%">用户名</th>
               @*<th width="10%">操作</th>*@
           </tr>
       </thead>
        <tbody id="listData"></tbody>
    </table>

    <div class="page mt_40 tr">
        <div class="listBtm">
            <div style="width: 20%;float: left;">
								<span>共有<span id="span_data_total"></span>条，每页显示</span>
								<select class="sel" id="select_page_size">
									<option value="10" selected>10</option>
									<option value="20">20</option>
								</select>
								<span>条</span>
							</div>
							<div class="page fr">                        
								<div id="pager"></div>
							</div>
        </div>
    </div>

</div>

