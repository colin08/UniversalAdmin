<!--底部脚本-->
@section foot
{
@Scripts.Render("~/bundles/laypage")
<script src="~/Assets/js/plugins/pace/jquery.pace.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function (e) {
            pageData(1);
        });

        /*******************列表 end *************************/
        //分页方法
        function pageData(page_index) {
            $.ajax({
                type: "post",
                url: "/User/UserData",
                data: { "page_size": $("#select_page_size").val(), "page_index": page_index, "keyword": $("#txt_search").val() },
                async: false, //同步请求
                datatype: "json",
                beforeSend: function () {
                    Pace.start();
                },
                complete: function () {
                    Pace.stop();
                },
                success: function (data) {
                    if (data.msg == 0) {
                        alert(data.msgbox);
                        return;
                    }

                    $("#show_search_word").text("\"" + $("#txt_search").val() + "\"");
                    $("#listData").html("");
                    var dataHtml = "";
                    $.each(data.data, function (i, item) {
                        dataHtml += "<tr>";
                        dataHtml += "<td><a href=\"/Info/User?id=" + item.ID + "\"><img src='" + item.Avatar + "' width='60px' /></a></td>"
                        dataHtml += "<td><a href=\"/Info/User?id=" + item.ID + "\">" + CutString(item.NickName, 15) + "</a></td>";
                        //dataHtml += "<td><div class=\"tbOpare\"><a href=\"javascript:;\" class=\"alook\"><i class=\"i-look\"></i></a></div></td>";
                        dataHtml += "</tr>";
                    });
                    if (data.data.length == 0) {
                        dataHtml += "<tr><td colspan=\"10\"><p style='text-align:center;font-size:16px;'>没有相关数据</p></td><tr>";
                    }
                    $("#span_data_total").text(data.total);
                    $("#show_search_total").text(data.total);
                    $("#listData").html(dataHtml);
                    //$("#pager").show();
                    //$("#pager").pager({ pagenumber: page_index, pagecount: data.data.PageTotal, totalcount: data.data.DataTotal, buttonClickCallback: PageClick });
                    //显示分页
                    laypage({
                        cont: 'pager', //容器。值支持id名、原生dom对象，jquery对象。【如该容器为】：<div id="page1"></div>
                        pages: data.msgbox, //通过后台拿到的总页数
                        curr: page_index || 1, //当前页
                        groups: 7, //连续显示分页数
                        skip: true, //是否开启跳页
                        jump: function (obj, first) { //触发分页后的回调
                            if (!first) { //点击跳页触发函数自身，并传递当前页：obj.curr
                                pageData(obj.curr, doc_id, clearbox);
                            }
                        }
                    });

                },
                error: function () {
                    alert("加载失败");
                }
            })
        }
        /*******************列表 end *************************/

    </script>

    <script type="text/javascript">
        function tab_click(action) {
            var search_word = $("#txt_search").val();
            if (search_word.length == 0) {
                alert("请输入搜索内容");
                return;
            }
            location.href = "/Search/" + action + "?word=" + search_word;
        }
    </script>

}
<!--底部脚本 end-->