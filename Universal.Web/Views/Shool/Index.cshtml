<!--头部脚本 end-->


<div class="wapper">
	@Html.Partial("_ShoolMenuLeft", this.ViewData)

	<div class="rightBox">
		<div class="container">
			<div class="new-head clearfix">
				<b class="f20" style="text-align: left;">秘籍列表</b> <span
					class="pos-r fr">
					<div class="search">
						<input id="txt_search" value="" placeholder="请输入标题" type="text"  onkeydown="KeyDown('data_search()')" ><input
							onclick="data_search()" type="button">
					</div> <span class="banbenOp mt_5 mr_15"> <a href="/Shool/Modify"
						title="上传"><i class="i-redbb"></i><span>上传秘籍</span></a></span> <input
					type="hidden" id="hid_temp_doc_id" value="0" />
				</span>
