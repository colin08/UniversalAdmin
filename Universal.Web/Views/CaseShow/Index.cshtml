@model  Universal.Entity.ViewModel.CaseShow

@{
    ViewBag.Title = "案例展示";
}

<!--头部脚本 Begin-->
@section head
{
    <link href="/Assets/jf/css/listsa.css" rel="stylesheet" />
}
<!--头部脚本 end-->

<!-- Body Begin -->
    <div class="main page_listsa">
        <div class="main-content">
            @*@if(Model.banner_list.Count > 1)
            {
                //Banner展示
                foreach (var item in Model.banner_list)
                {
                    @:<span attr="图片地址">@item.ImgUrl</span>>
                    @:<span attr="跳转地址">@item.GetClickUrl</span>
                }
            }
            else
            {
                //单图显示                
                <span attr="图片地址">@Model.banner_list.First().ImgUrl</span>
                <span attr="跳转地址">@Model.banner_list.First().GetClickUrl</span>
            }*@

            <div class="sz-banner page-container-min-width sz-banner-bg1">
                <div class="page-container-width">
                    <p class="bpt">VR交互体验</p>
                    <div class="page-pub-line"></div>
                    <p class="bpl">沉浸式进入虚拟世界消费内容，给用户身临其境的感觉<br />电影、比赛、风景、新闻、旅游互动中的物理动态式体验</p>
                </div>
            </div>
            <div class="lv1 page-container-min-width">
                <div class="page-container-width">
                    <p class="list-tt">最新项目案例</p>
                    <div class="page-pub-line"></div>
                    <p class="list-und">案例展示</p>
                    <div class="shuzi-line"></div>
                    <row :gutter="12">
                        @foreach (var item in Model.case_list_new)
                        {
                            <i-col span="8">
                                <div class="product-style">
                                    <div class="pic-box">
                                        <img src="@(WorkContext.WebSiteConfig.SiteUrl+ item.ImgUrl)">
                                        <div class="pic-link">
                                            <span class="out-mid" onclick="location.href='/CaseShow/Detail?id=@item.GetBase64ID'">
                                                <i class="box-line"></i><br>
                                                查看详情
                                                <i class="box-line box-line-u"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="txt-box">
                                        <p class="pro-pdt">@item.Time</p>
                                        <p class="pro-pdl">
                                            <span>时间：@item.Time</span>
                                            <span>地点：@item.Address</span>
                                        </p>
                                        <div class="pro-line"></div>
                                        <p class="pro-pdd clearfix" onclick="location.href='/CaseShow/Detail?id=@item.GetBase64ID'"><i class="iconfont icon-jiantou1-copy bounce"></i>Details</p>
                                    </div>
                                </div>
                            </i-col>
                        }
                    </row>
                </div>
            </div>
            <div class="lv2 page-container-min-width">
                <div class="page-container-width">
                    <p class="list-tt">经典案例</p>
                    <div class="page-pub-line"></div>
                    <p class="list-und">案例展示</p>
                    <div class="shuzi-line"></div>
                    <ul class="product-list clearfix">
                        @foreach (var item in Model.case_list_classic)
                        {
                            <li>
                                <div class="product-style">
                                    <div class="pic-box">
                                        <img src="@(WorkContext.WebSiteConfig.SiteUrl+ item.ImgUrl)">
                                        <div class="pic-link">
                                            <span class="out-mid" onclick="location.href='/CaseShow/Detail?id=@item.GetBase64ID'">
                                                <i class="box-line"></i><br>
                                                查看详情
                                                <i class="box-line box-line-u"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="txt-box">
                                        <p class="pro-pdt">@item.Title</p>
                                        <p class="pro-pdl">
                                            <span>时间：@item.Time</span>
                                            <span>地点：@item.Address</span>
                                        </p>
                                        <div class="pro-line"></div>
                                        <p class="pro-pdd clearfix" onclick="location.href='/CaseShow/Detail?id=@item.GetBase64ID'"><i class="iconfont icon-jiantou1-copy bounce"></i>Details</p>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                    <div class="more-bnt">
                        <i-button>查看更多</i-button>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- Body End -->

