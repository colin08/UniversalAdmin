<div class="wapper">
@Html.Partial("_AdminMenuLeft", this.ViewData)
    <div class="rightBox">
        <div class="container">
            <div class="tit1">
                <b>员工管理</b>
                <div class="search"><input id="txt_search" value="" placeholder="请输入手机号/姓名" type="text"><input onclick="data_search()" type="button"></div>
                <span class="banbenOp fr"><a href="/AdminUser/Modify" title="添加员工"><i class="i-addmb"></i> 添加员工</a><a href="/AdminUser/Job" title="职位管理"><i class="i-jobmg"></i> 职位管理</a></span>
                <input type="hidden" id="hid_temp_department_id" value="0" />
            </div>
            <div class="file">
                <div class="fileLt" id="menu">
                    <h4>所有部门</h4>
                    <ul id="tree_root">
                        @Html.Raw(ViewData["TreeData"])
                    </ul>
                </div>

                <div class="fileRt">
                    <div class="projectColl">
                        <table border="0" cellspacing="0" cellpadding="0" class="table1">
                            <thead>
                                <tr>
                                    <th width="5%"><span class="sp_a"><input type="checkbox" onclick="CheckAll(this)" /></span></th>
                                    <th width="10%">姓名</th>
