                        </table>
                        <div class="listBtm">
                            <div class="page fr">
                                <span>共有<span id="span_data_total"></span>条，每页显示</span>
                                <select class="sel" id="select_page_size">
                                    <option value="10" selected>10</option>
                                    <option value="20">20</option>
                                </select>
