                            <div class="limd">
                                <span>
                                    <label for="lb_factor_0">
                                        @Html.RadioButtonFor(x => x.is_factor, "0", Model.is_factor ? (object)new { id = "lb_factor_0", @checked = true } : (object)new { id = "lb_factor_0" })
                                        <i class="pub_radio"></i>
