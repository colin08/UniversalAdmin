@model Universal.Web.Models.ViewModelUserLogin
@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>登录</title>
    <link type="text/css" rel="stylesheet" href="/Content/css/public.css" />
</head>

<body class="login_bg">
    <div class="login_content">
        <div class="content">
            <h1 class="logo"></h1>
            <form class="form_login" id="signIn" method="post">
                @Html.AntiForgeryToken()
                <p class="form_pad">@Html.TextBoxFor(s => s.user_name, new { placeholder = "手机号/邮箱", @class= "form_inp" })</p>
                <p class="form_pad">@Html.PasswordFor(s => s.password, new { placeholder = "密码",@class= "form_inp" })</p>
                <input type="submit" class="form_but" id="button" value="登录" />
                <div class="clearfix">
                    <label for="@Html.DisplayNameFor(s=>s.is_rember)" class="lab">@Html.CheckBoxFor(s => s.is_rember) 自动登录</label>
                    <a class="sp" href="/account/resetpwd">忘记密码?</a>
                </div>
                <p class="error" id="error">@Html.ValidationSummary()</p>
            </form>
        </div>
    </div>
    <p class="login_footer">Copyright &copy; 深圳花伴里实业集团有限公司  粤ICP备13089427号-1</p>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function(e) {
	        document.onkeydown=function(event){
		        var e = event || window.event || arguments.callee.caller.arguments[0];
		         if(e && e.keyCode==13){ // enter 键
			         //要做的事情.
			         $("#button").click();
		        }
	        };
        });


    </script>
</body>
</html>