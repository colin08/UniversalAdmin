@section foot
{
@Scripts.Render("~/bundles/jqueryval")
<script src="/assets/laydate/laydate.js"></script>
    <script type="text/javascript">
		function switchSee(id){
			if(id==2){
				$('#ul2').show();
				$('#add_users').show();
			}else{
				$('#ul2').hide();
				$('#add_users').hide();
			}
		}
