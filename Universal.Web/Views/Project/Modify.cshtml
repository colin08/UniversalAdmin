                <h4 class="f16 mb_10">项目信息</h4>
                <div class="userInfo">
                    <ul>
                        <li>
                            <label >项目区域</label>
                            @Html.DropDownListFor(p => p.area, ViewData["AreaList"] as List<SelectListItem>, new { @class = "select-input" })
