                                    <a href="javascript:void(0)" onclick="DelPic(this,'span_upload_albums')">删除</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <div class="lilt">&nbsp;</div>
                            <div class="limd"><button type="button" onclick="show_div(2)" class="btn1">下一步</button></div>
                        </li>
                    </ul>
                </div>

            </div>

            <!--第二步-->
