        	    moveId(id,'ul2','#see_ids');
       		});
       	});
		$('#see_ids').val(tmp.join(','));
		var tmp=[];
		$('#user_list1 ul li a').each(function(){
			tmp.push($(this).attr('data-id'));
       		$(this).click(function(){
       			var id=$(this).attr('data-id');
        	    moveId(id,'user_list1','#user_ids');
       		});
       	});
		$('#user_ids').val(tmp.join(','));
