@model Universal.Web.Models.ViewModelProjectFlowNode
@{
    ViewBag.Title = "流程节点详情";
    ViewData["tabTop"] = "project";
}

<!--头部脚本-->
@section head
{

}
<!--头部脚本 end-->

<div class="clear"></div>
<!--wrapper [[-->
<div class="container">
    <div class="new-head mb-40 clearfix">
        <a href="/Project/FlowInfo?id=@Model.flow_info.ProjectID" class="fl f16 go-prev"><i class="i-back"></i><span>流程节点</span></a>
        <b class="f20">项目详情</b>
    </div>
    <input type="hidden" id="files" value="@Model.node_files" />
    <div class="userInfo sysIn">
        <ul>
            <li>
                <div class="lilt">节点名称</div>
                <div class="limd">
                    <span>@Model.node_info.Title</span>
                </div>
                <div class="litip"></div>
            </li>
            <li>
                <div class="lilt">办事地址</div>
                <div class="limd">
                    <span>@Model.node_info.Location</span>
                </div>
                <div class="litip"></div>
            </li>
            <li>
                <div class="lilt">办事流程说明</div>
                <div class="limd">
                    <span>@Model.node_info.Content</span>
                </div>
                <div class="litip"></div>
            </li>
            <li>
                <div class="lilt">联系人</div>
                <div class="limd">
                    <span>@Model.node_info.ContactsUsers</span>
                </div>
                <div class="litip"></div>
            </li>
            <li>
                <div class="lilt">节点附件</div>
                <div class="limd">
                    <ul>
                        @foreach (var item in Model.node_info.NodeFiles)
                        {
                            <li><span>@item.FileName &nbsp; @item.FileSize</span>&nbsp;&nbsp;&nbsp;<a href="@item.FilePath" target="_blank">下载</a></li>
                        }
                    </ul>
                </div>
                <div class="litip"></div>
            </li>
            <li>
                <div class="lilt">备注说明</div>
                <div class="limd pr">
                    <textarea id="remark" class = "usTextarea" >@Html.Raw(Model.flow_info.Remark)</textarea>
                </div>
                <div class="litip"></div>
            </li>
            <li>
                <div class="lilt">备注附件</div>
                <div class="limd big">
                    <ul id="file_list">
                        @foreach (var item in Model.node_file_list)
                        {
                            <li>
                                <a href="javascript:;" onclick="RemoveUp(this)" class="btn-add uploadBtnBox"><i class="i-barrel"></i></a>
                                <a href="javascript:;" class="btn-add uploadBtnBox"><i class="i-redbb"></i>上传文件<input type="file" class="uploadBtn" onchange="Upload(this)" /></a>
                                <span spath="@item.file_path">@item.file_name</span> &nbsp;
                                <span></span>
                                <span>@item.file_size</span>
                            </li>
                        }
                        <li class="guding">
                            <a href="javascript:;" class="btn-add uploadBtnBox" onclick="AddFile()"><i class="i-attach"></i>新增</a>
                        </li>
                    </ul>
                </div>
            </li>
            <li>
                <div class="lilt">&nbsp;</div>
                <div class="limd">
                    <button type="button" onclick="save()" class="btn1">保存备注和附件</button> 
                    <button type="button" onclick="location.href = '/Project/FlowInfo?id=@Model.flow_info.ProjectID;" class="btn1 grey">返回项目流程</button>
                </div>
            </li>
        </ul>
    </div>

</div>
<!--wrapper ]]-->


