@model Universal.Web.Areas.Admin.Models.ViewModelSysMerchantList
@{
    ViewBag.Title = "商户列表";
}

<!--头部脚本-->
@section head
{

}
<!--头部脚本 end-->
<!-- Panel -->
@section nav
{
    <div class="ibox-title">
        <h5>商户列表</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-refresh" onclick="javascript: location.reload()"></i>
            </a>
        </div>
    </div>

}
<!--Panel end-->
<!--路径导航-->
<div class="row">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li><a href="/Admin/Home/Center">主页</a></li>
            <li><a href="/Admin/SysMerchant/Index">商户管理</a></li>
            <li><strong>商户列表</strong></li>
        </ol>
    </div>
    @if (CheckAdminPower("SysMerchant/updateroute", true))
    {
        <a class="btn btn-default pull-right" onclick="update()" id="a_update_route">更新系统路由表</a>
    }
    <div style="height: 40px;"></div>
</div>
<!-- 路径导航 end -->
<!--Main Body-->

<div class="row">
    <div class="col-sm-2">
        @if (CheckAdminPower("SysMerchant/edit", true))
        {
            @:<a class="btn btn-white" href="@Url.Action("Edit", "SysMerchant", new { Area = "Admin" })"><i class="glyphicon glyphicon-plus"></i> 添加</a>
        }
        @if (CheckAdminPower("SysMerchant/ShutDown", true))
        {
            @:<a class="btn btn-white" href="javascript:void(0)" onclick="del('/Admin/SysMerchant/ShutDown',1)"><i class="glyphicon glyphicon-ban-circle"></i> 禁用</a>
        }
    </div>
    <div class="col-sm-4">
        <p></p>
    </div>
    <div class="col-sm-2">
        
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <input type="text" id="txt_word" value="@Model.word" placeholder="关键字" onkeydown="KeyDown('WordSearch()')" class="input-sm form-control">
            <span class="input-group-btn">
                <button type="button" class="btn btn-sm btn-info" onclick="WordSearch()"> 搜索</button>
            </span>
        </div>
    </div>
</div>

<br />

@if (Model.DataList.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" onclick="CheckAll(this)" txt="全选">
                    </th>
                    <th>ID</th>
                    <th>商户名称</th>
                    <th>状态</th>
                    <th>添加时间</th>
                    <th>最后使用时间</th>
                    <th>访问链接</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DataList)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="datacheck" hid="@item.ID">
                        </td>
                        <td>@item.ID</td>
                        <td><a href="/Admin/SysMerchant/Edit?id=@item.ID">@item.Title</a></td>
                        <td><i class="glyphicon glyphicon-@(item.Status ? "ok": "ban-circle")"></i></td>
                        <td>@item.AddTime</td>
                        <td>@item.LastLoginTime</td>
                        <td>
                            <a class="btn btn-sm btn-white" href="javascript:void(0);" onclick="ShowLink('@item.GetLinkUrl(ViewData["Domain"].ToString(),ViewData["DESKEY"].ToString())')"><i class="glyphicon glyphicon-link"></i> 链接</a>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-white" href="/Admin/SysMerchant/Edit?id=@item.ID"><i class="glyphicon glyphicon-edit"></i> 修改</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="am-cf">
            每页 <input type="number" cname="sysmchindex" value="@Model.page_size" id="txt_page_size" style="width:40px;" onchange="SetPageSize(this)" /> 条数据 共 @Model.total 条记录
            <div class="pull-right">
                <div id="pager"></div>
            </div>
        </div>
    </div>
}
else
{
    <p id="pager"><h2>没有相关数据</h2></p>
}
<!-- Main Body end -->
<!--底部脚本-->
@section foot
{
    @Scripts.Render("~/bundles/laypage")
    <script type="text/javascript">

	@if (CheckAdminPower("SysMerchant/updateroute", true))
    {
        <text>
        function update()
        {
            $("#a_update_route").attr('disabled',"true");
            $("#a_update_route").text("更新中....");
            $.post("/admin/SysMerchant/UpdateRoute", { "a":1 }, function (result) {
                $("#a_update_route").removeAttr("disabled");
                if(result.msg == 1)
                {
                    $("#a_update_route").text("更新完毕");
                }
                else
                {
                    $("#a_update_route").text("更新失败!");
                }
                
            });
        }
        </text>
    }
	
    function WordSearch()
    {
        if($("#txt_word").val().length==0)
        {
            location.href = "?page=1";
        }
        else
        {
            location.href = "?page=1&word="+encodeURIComponent($("#txt_word").val());
        }

    }

    laypage({
        cont: 'pager',
        pages: @Model.total_page,
        skin:"#0e90d2",
        curr: function () {
            var page = location.search.match(/page=(\d+)/);
            return page ? page[1] : 1;
        }(),
        jump: function (e, first) { //触发分页后的回调
            if (!first) { //一定要加此判断，否则初始时会无限刷新
                location.href = '?page=' + e.curr;
            }
        }
    });

        function ShowLink(link_url) {
            var txt = BuildLinkTxt(link_url);
            layer.open({
                type: 1
                  , title: false //不显示标题栏
                  , closeBtn: false
                  , area: '500px;'
                  , shade: 0.4
                  , id: 'LAY_layuipro' //设定一个id，防止重复弹出
                  , resize: false
                  , btn: ['关闭']
                  , btnAlign: 'c'
                  , moveType: 1 //拖拽模式，0或者1
                  , content: txt
                  , success: function (layero) {
                  }
            });
        }

        function BuildLinkTxt(link_url) {
            var HtmlTxt = "<div style=\"padding: 10px; line-height: 20px; font-weight: 300;\">";
            HtmlTxt += "<div style=\"padding: 10px; line-height: 20px; font-weight: 300;\">";
            HtmlTxt += "<span style=\"font-size: 12px;\">链接：</span>";
            HtmlTxt += "<input type=\"text\" class=\"dfinput\" value=\"" + link_url + "\" style=\"margin-top:10px; text-align:center;cursor:text;width:100%;\" readonly><br>";
            HtmlTxt += "</div>";
            return HtmlTxt;
        }
    </script>
}

<!--底部脚本 end-->