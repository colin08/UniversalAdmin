@model Universal.Web.Areas.Admin.Models.ViewModelMedicalList
@{
    ViewBag.Title = "体检套餐列表";
}

<!--头部脚本-->
@section head
{

}
<!--头部脚本 end-->
<!-- Panel -->
@section nav
{
    <div class="ibox-title">
        <h5>体检套餐列表</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-refresh" onclick="javascript: location.reload()"></i>
            </a>
        </div>
    </div>

}
<!--Panel end-->
<!--路径导航-->
<div class="row">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li><a href="/Admin/Home/Center">主页</a></li>
            <li><a href="/Admin/Medical/Index">体检套餐列表</a></li>
            <li><strong>套餐列表</strong></li>
        </ol>
    </div>

    <div style="height: 40px;"></div>
</div>
<!-- 路径导航 end -->
<!--Main Body-->

<div class="row">
    <div class="col-sm-2">
        @if (CheckAdminPower("Medical/edit", true))
        {
            @:<a class="btn btn-white" href="@Url.Action("Edit", "Medical", new { Area = "Admin" })"><i class="glyphicon glyphicon-plus"></i> 添加</a>
        }
        @if (CheckAdminPower("Medical/del", true))
        {
            @:<a class="btn btn-white" href="javascript:void(0)" onclick="del('/Admin/Medical/Del',1)"><i class="glyphicon glyphicon-ban-circle"></i> 禁用</a>
        }
    </div>
    <div class="col-sm-4">
        <p></p>
    </div>
    <div class="col-sm-2">
        @Html.DropDownListFor(p => p.role, ViewData["StatusList"] as List<SelectListItem>, new { @class = "input-sm form-control", onchange = "RoleChange(this)" })
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <input type="text" id="txt_word" value="@Model.word" placeholder="关键字" onkeydown="KeyDown('WordSearch()')" class="input-sm form-control">
            <span class="input-group-btn">
                <button type="button" class="btn btn-sm btn-info" onclick="WordSearch()"> 搜索</button>
            </span>
        </div>
    </div>
</div>

<br />

@if (Model.DataList.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" onclick="CheckAll(this)" txt="全选">
                    </th>
                    <td>引用ID</td>
                    <td>套餐封面</td>
                    <th>套餐名称</th>
                    <th>原价</th>
                    <th>销售价</th>
                    <th>状态</th>
                    <td>排序数字</td>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DataList)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="datacheck" hid="@item.ID">
                        </td>
                        <td>@item.ID</td>
                        <td><img src="@item.ImgUrl" width="100" height="60" /></td>
                        <td>@item.Title</td>
                        <td>@item.YPrice.ToString("F2")</td>
                        <td>@item.Price.ToString("F2")</td>
                        <td><i class="glyphicon glyphicon-@(item.Status == Universal.Entity.MedicalStatus.Up ? "ok": "ban-circle")"></i></td>
                        <td>@item.Weight</td>
                        <td>
                            <a class="btn btn-sm btn-white" href="/Admin/Medical/Edit?id=@item.ID"><i class="glyphicon glyphicon-edit"></i> 修改</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="am-cf">
            每页 <input type="number" cname="@WorkContext.PageKeyCookie" value="@Model.page_size" id="txt_page_size" style="width:40px;" onchange="SetPageSize(this)" /> 条数据 共 @Model.total 条记录
            <div class="pull-right">
                <div id="pager"></div>
            </div>
        </div>
    </div>
}
else
{
    <p id="pager"><h2>没有相关数据</h2></p>
}
<!-- Main Body end -->
<!--底部脚本-->
@section foot
{
    @Scripts.Render("~/bundles/laypage")
    <script type="text/javascript">
    function RoleChange(dp)
    {
        if(dp.value ==0)
        {
            location.href = "?page=1";
        }
        else{
            location.href = "?page=1&role="+dp.value;
        }
    }

    function WordSearch()
    {
        if($("#txt_word").val().length==0)
        {
            location.href = "?page=1";
        }
        else
        {
            location.href = "?page=1&role=0&word="+encodeURIComponent($("#txt_word").val());
        }

    }

    laypage({
        cont: 'pager',
        pages: @Model.total_page,
        skin:"#0e90d2",
        curr: function () {
            var page = location.search.match(/page=(\d+)/);
            return page ? page[1] : 1;
        }(),
        jump: function (e, first) { //触发分页后的回调
            if (!first) { //一定要加此判断，否则初始时会无限刷新
                location.href = '?page=' + e.curr;
            }
        }
    });
    </script>
}

<!--底部脚本 end-->