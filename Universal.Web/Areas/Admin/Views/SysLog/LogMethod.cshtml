@model Universal.Web.Areas.Admin.Models.ViewModelLogMethod
@{
    ViewBag.Title = "系统操作日志列表";
}

<!--头部脚本-->
@section head
{

}
<!--头部脚本 end-->

<!--路径导航-->
@section nav
{
    <div class="col-sm-4">
        <h2>系统操作日志列表</h2>
        <ol class="breadcrumb">
            <li>主页</li>
            <li><strong>系统操作日志列表</strong></li>
        </ol>
        
    </div>

<div class="pull-right" style="margin-right:15px;">
    <button type="button" class="btn pull-right" onclick="javascript: location.reload() "><i class="glyphicon glyphicon-refresh"></i> 刷新</button>
</div>
}
<!--路径导航 end-->
 
<!--Main Body-->

<div class="row">
    <div class="col-sm-2">
        @if(CheckAdminPower("SysLog/DelMethod", true))
        {
        @:<a class="btn btn-white" href="javascript:void(0)" onclick="del('/Admin/SysLog/DelMethod',1)"><i class="glyphicon glyphicon-trash"></i> 删除</a>
        }
    </div>
    <div class="col-sm-4">
        <p></p>
    </div>
    <div class="col-sm-2">
        @Html.DropDownListFor(p => p.type, ViewData["LogMethod_Type"] as List<SelectListItem>, new { @class= "input-sm form-control", onchange = "SelectChange(this)" })
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <input type="text" id="txt_word" value="@Model.word" placeholder="关键字" class="input-sm form-control">
            <span class="input-group-btn">
                <button type="button" class="btn btn-sm btn-primary" onclick="WordSearch()"> 搜索</button>
            </span>
        </div>
    </div>
</div>
<br>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" onclick="CheckAll(this)" txt="全选">
                </th>
                <th>ID</th>
                <th>操作用户</th>
                <th>类别</th>
                <th>详情</th>
                <th>操作时间</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DataList)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="datacheck" hid="@item.ID">
                    </td>
                    <td>@item.ID</td>
                    <td>@item.SysUser.UserName</td>
                    <td>@item.TypeStr</td>
                    <td>@item.Detail</td>
                    <td>@item.AddTime</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="am-cf">
        每页 <input type="number" cname="sysuserindex" value="@Model.page_size" id="txt_page_size" style="width:40px;" onchange="SetPageSize(this)" /> 条数据 共 @Model.total 条记录
        <div class="pull-right">
            <div id="pager"></div>
        </div>
    </div>
</div>

<!-- Main Body end -->

<!--底部脚本-->
@section foot
{
<script src="~/Assets/js/plugins/layer/laypage/laypage.js"></script>
<script>
    function SelectChange(dp)
    {
        if(dp.value ==0)
        {
            location.href = "?page=1";
        }
        else{
            location.href = "?page=1&type="+dp.value;
        }
    }

    function WordSearch()
    {
        if($("#txt_word").val().length==0)
        {
            location.href = "?page=1";
        }
        else
        {
            location.href = "?page=1&type=0&word="+encodeURIComponent($("#txt_word").val());
        }

    }

    laypage({
        cont: 'pager',
        pages: @Model.total_page,
        skin:"#0e90d2",
        curr: function () {
            var page = location.search.match(/page=(\d+)/);
            return page ? page[1] : 1;
        }(),
        jump: function (e, first) { //触发分页后的回调
            if (!first) { //一定要加此判断，否则初始时会无限刷新
                location.href = '?page=' + e.curr;
            }
        }
    });
</script>
}

<!--底部脚本 end-->
