@model Universal.Web.Areas.Admin.Models.ViewModelLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>后台管理 - 登录</title>

    @Styles.Render("~/Content/admin/css")
</head>

<body class="gray-bg">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">H+</h1>

            </div>
            <h3>欢迎登录后台系统</h3>
            <form method="post" role="form" class="m-t" onsubmit="toValid()" style="margin-top:25px;">
                @Html.AntiForgeryToken()
                <div class="form-group" style="margin-bottom:25px;">
                    @Html.TextBoxFor(s => s.user_name, new { placeholder = "用户名", @class= "form-control" })
                    <div class="pull-left vali-msg">@Html.ValidationMessageFor(p => p.user_name)</div>
                </div>
                <div class="form-group" style="margin-bottom:25px;">
                    @Html.PasswordFor(s => s.password, new { placeholder = "密码",@class= "form-control" })
                    <div class="pull-left vali-msg">@Html.ValidationMessageFor(p => p.password)</div>
                </div>
                <div class="pull-left" style="margin-bottom: 10px;">
                    @Html.CheckBoxFor(s => s.is_rember)
                    <label for="@Html.DisplayNameFor(s=>s.is_rember)">
                        保持登录
                    </label>
                </div>
                
                <button type="submit" id="confi" class="btn btn-info block full-width m-b">登 录</button>
            </form>

        </div>
        <hr>
        <div class="signup-footer">
            <div class="pull-center">
                @{
                    Html.RenderPartial("_FootInc");
                }
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function toValid() {
            if ($("form").valid())
            {
                $("#confi").val("登录中...");
                $("#confi").attr({ "disabled": "disabled" });
            }
            
        }
    </script>
</body>
</html>