@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">

    <title>后台管理</title>

    <meta name="keywords" content="">
    <meta name="description" content="">

    <link rel="shortcut icon" href="~/favicon.ico">
    @Styles.Render("~/Content/admin/css")
</head>

<body class="fixed-sidebar full-height-layout gray-bg" style="overflow:hidden">
    <div id="wrapper">
        <!--左侧导航开始-->
        <nav class="navbar-default navbar-static-side" style="margin-top:1px;" role="navigation">
            <div class="nav-close"><i class="fa fa-times-circle"></i>
            </div>
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element" style="margin:40px;">
                            <span><img alt="image" class="img-circle" width="64" height="64" src="@WorkContext.UserInfo.AvatarOrDefault" /></span>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs"><strong class="font-bold">@WorkContext.UserInfo.UserName</strong></span>
                                    <span class="text-muted text-xs block">@WorkContext.UserInfo.NickName<b class="caret"></b></span>
                                </span>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li class="divider" style="display:none;"></li>
                                <li>
                                    <a href="/Admin/Home/LoginOut">安全退出</a>
                                </li>
                            </ul>
                        </div>
                        <div class="logo-element">
                        	<span><img alt="image" class="img-circle" width="64" height="64" src="@WorkContext.UserInfo.AvatarOrDefault" /></span>
                        </div>
                    </li>
                    <li>
                        <a class="J_menuItem" href="/Admin/Home/Center"><i class="fa fa-home"></i><span class="nav-label">主页</span></a>
                    </li>
					@if (CheckAdminPower("Sysuser/Index", false))
                    {
						<li class="line dk"></li>
						<li class="hidden-folded padder m-t m-b-sm text-muted text-xs">
							<span class="ng-scope">User</span>
						</li>
						<li>
							<a class="J_menuItem" href="/Admin/SysUser/Index"><i class="fa fa-user"></i> <span class="nav-label">用户管理</span></a>
						</li>
						if (CheckAdminPower("SysRole/Index", false))
						{
							<li>
								<a class="J_menuItem" href="/Admin/SysRole/Index"><i class="fa fa-users"></i> <span class="nav-label">用户管理</span></a>
							</li>
						}
					}
					@if (CheckAdminPower("CusCategory/Index", false))
					{
						<li class="line dk"></li>
						<li class="hidden-folded padder m-t m-b-sm text-muted text-xs">
							<span class="ng-scope">Category</span>
						</li>
						<li>
							<a class="J_menuItem" href="/Admin/CusCategory/Index"><i class="fa fa-bars"></i> <span class="nav-label">分类管理</span></a>        
						</li>                   	
					}
					<li class="line dk"></li>
                    <li class="hidden-folded padder m-t m-b-sm text-muted text-xs">
                        <span class="ng-scope">Demo</span>
                    </li>
                    <li>
                        <a class="J_menuItem" href="/Admin/Demo/Index"><i class="fa fa-picture-o"></i> <span class="nav-label">测试相册</span></a>
                    </li>

					@if(CheckAdminPower("SysConfig/Sys", false))
					{
						<li class="line dk"></li>
						<li class="hidden-folded padder m-t m-b-sm text-muted text-xs">
							<span class="ng-scope">System</span>
						</li>
						if (CheckAdminPower("SysLog/Log", false))
						{
							<li>
								<a href="#"><i class="fa fa-bars"></i> <span class="nav-label">系统日志</span><span class="fa arrow"></span></a>
								<ul class="nav nav-second-level">
									@if (CheckAdminPower("SysLog/LogMethod", false))
									{
										<li><a class="J_menuItem" href="/Admin/SysLog/LogMethod">操作日志</a></li>
									}
									@if (CheckAdminPower("SysLog/LogException", false))
									{
										<li><a class="J_menuItem" href="/Admin/SysLog/LogException">异常日志</a></li>
									}
									@if (CheckAdminPower("SysLog/LogApiAction", false))
									{
									<li><a class="J_menuItem" href="/Admin/SysLog/LogApiAction">接口日志</a></li>
									}
								</ul>
							</li>
						}
						if (CheckAdminPower("SysDbBack/Index", false))
						{
							<li><a class="J_menuItem" href="/Admin/SysDbBack/Index"><i class="fa fa-database"></i> <span class="nav-label">数据库备份管理</span></a></li>
						}
						if (CheckAdminPower("SysConfig/Modify", false))
						{
							<li><a class="J_menuItem" href="/Admin/SysConfig/Modify"><i class="fa fa-gear"></i> <span class="nav-label">站点配置文件</span></a></li>
						}
						if (CheckAdminPower("AppVersion/Index", false))
						{
							<li>
								<a class="J_menuItem" href="/Admin/AppVersion/Index"><i class="fa fa-paper-plane-o"></i> <span class="nav-label">App版本管理</span></a>
							</li>
						}
					}
					<li style="height: 100px;">
                    </li>
                </ul>
            </div>
        </nav>
        <!--左侧导航结束-->
        <!--右侧部分开始-->
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header"><a class="navbar-minimalize minimalize-styl-2 btn btn-info " href="javascript:void(0)"><i class="fa fa-bars"></i> </a>
                        <form role="search" class="navbar-form-custom" method="post" action="search_results.html">
                            <div class="form-group">
                                <input type="text" placeholder="请输入您需要查找的内容 …" class="form-control" name="top-search" id="top-search">
                            </div>
                        </form>
                    </div>
                
                </nav>
            </div>
            <div class="row J_mainContent" id="content-main">
                <iframe id="J_iframe" width="100%" height="100%" src="/Admin/Home/Center" frameborder="0" data-id="/Admin/Home/Center" seamless></iframe>
            </div>
        </div>
        <!--右侧部分结束-->
    </div>

    <!-- 全局js -->
    @Scripts.Render("~/bundles/admin_base")
    @Scripts.Render("~/bundles/metisMenu")
    @Scripts.Render("~/bundles/slimscroll")

    <!-- 自定义js -->
    <script src="/Assets/js/hAdmin.js?v=4.1.0"></script>

	<script type="text/javascript">
		$(function(){
		    //菜单点击    
		    $(".J_menuItem").on('click',function(){
		        var url = $(this).attr('href');
		        $("#J_iframe").attr('src',url);
		        return false;
		    });
		});

	</script>
</body>

</html>
