@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <title>后台管理 - 首页</title>

    <!--[if lt IE 8]>
    <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->

    <link rel="shortcut icon" href="~/favicon.ico">
    @Styles.Render("~/Content/admin/css")
</head>

<body class="fixed-sidebar full-height-layout gray-bg" style="overflow:hidden">
    <div id="wrapper">
        <!--左侧导航开始-->
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="nav-close">
                <i class="fa fa-times-circle"></i>
            </div>
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <span><img alt="image" class="img-circle" width="64" height="64" src="@WorkContext.UserInfo.AvatarOrDefault" /></span>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs"><strong class="font-bold">@WorkContext.UserInfo.UserName</strong></span>
                                    <span class="text-muted text-xs block">@WorkContext.UserInfo.NickName<b class="caret"></b></span>
                                </span>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li class="divider" style="display:none;"></li>
                                <li>
                                    <a href="/Admin/Home/LoginOut">安全退出</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a class="J_menuItem" href="/Admin/Home/Center" data-index="0"><i class="fa fa-home"></i> <span class="nav-label">首页</span></a>
                    </li>
                     @if (CheckAdminPower("Sysuser/Index", false))
                     {
                     <text>
                    <li>
                        <a href="#"><i class="fa fa-users"></i> <span class="nav-label">后台用户</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            @if (CheckAdminPower("SysUser/Index", false))
                            {
                            @:<li><a class="J_menuItem" href="/Admin/SysUser/Index">用户管理</a></li>
                            }
                             @if (CheckAdminPower("SysRole/Index", false))
                             {
                            @:<li><a class="J_menuItem" href="/Admin/SysRole/Index">用户组管理</a></li>
                             }
                        </ul>
                    </li>
                    </text>
                     }

                    @if (CheckAdminPower("SysLog/LogMethod", false))
                     {
                     <text>
                    <li>
                        <a href="#"><i class="fa fa-bars"></i> <span class="nav-label">系统日志</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            @if (CheckAdminPower("SysLog/LogMethod", false))
                            {
                            @:<li><a class="J_menuItem" href="/Admin/SysLog/LogMethod">操作日志</a></li>
                            }
                             @if (CheckAdminPower("SysLog/LogException", false))
                             {
                            @:<li><a class="J_menuItem" href="/Admin/SysLog/LogException">异常日志</a></li>
                             }
                        </ul>
                    </li>
                    </text>
                     }

                    @if (CheckAdminPower("AppVersion/Index", false))
                    {
                    <li>
                        <a class="J_menuItem" href="/Admin/AppVersion/Index"><i class="fa fa-paper-plane-o"></i> <span class="nav-label">App版本管理</span></a>
                    </li>
                    }
                    <li>
                        <a class="J_menuItem" href="/Admin/Demo/Index"><i class="fa fa-picture-o"></i> <span class="nav-label">测试相册</span></a>
                    </li>

                </ul>
            </div>
        </nav>
        <!--左侧导航结束-->
        <!--右侧部分开始-->
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                </nav>
            </div>
            <div class="row content-tabs">
                <button class="roll-nav roll-left J_tabLeft">
                    <i class="fa fa-backward"></i>
                </button>
                <nav class="page-tabs J_menuTabs">
                    <div class="page-tabs-content">
                        <a href="javascript:;" class="active J_menuTab" data-id="/Admin/Home/Center">首页</a>
                    </div>
                </nav>
                <button class="roll-nav roll-right J_tabRight">
                    <i class="fa fa-forward"></i>
                </button>
                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown J_tabClose" data-toggle="dropdown">
                        关闭操作<span class="caret"></span>

                    </button>
                    <ul role="menu" class="dropdown-menu dropdown-menu-right">
                        <li class="J_tabShowActive">
                            <a>定位当前选项卡</a>
                        </li>
                        <li class="divider"></li>
                        <li class="J_tabCloseAll">
                            <a>关闭全部选项卡</a>
                        </li>
                        <li class="J_tabCloseOther">
                            <a>关闭其他选项卡</a>
                        </li>
                    </ul>
                </div>
                <a href="/Admin/Home/LoginOut" class="roll-nav roll-right J_tabExit"><i class="fa fa fa-sign-out"></i> 退出</a>
            </div>
            <div class="row J_mainContent" id="content-main">
                <iframe class="J_iframe" name="iframe0" width="100%" height="100%" src="/Admin/Home/Center" frameborder="0" data-id="/Admin/Home/Center" seamless></iframe>
            </div>
            <div class="footer">
                <div class="pull-right">
                    @{
                        Html.RenderPartial("_FootInc");
                    }
                </div>
            </div>
        </div>
        <!--右侧部分结束-->

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/metisMenu")
    @Scripts.Render("~/bundles/slimscroll")
    @Scripts.Render("~/bundles/layer")
    @Scripts.Render("~/bundles/hplus")
    @Scripts.Render("~/bundles/contabs")
</body>
</html>