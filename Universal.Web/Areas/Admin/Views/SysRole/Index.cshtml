@model Universal.Web.Areas.Admin.Models.ViewModelSysRoleList
@{
    ViewBag.Title = "后台用户组列表";
}

<!--头部脚本-->
@section head
{

}
<!--头部脚本 end-->

<!--路径导航-->
@section nav
{
    <div class="col-sm-4">
        <h2>后台用户组列表</h2>
        <ol class="breadcrumb">
            <li>主页</li>
            <li><strong>后台用户组列表</strong></li>
        </ol>
    </div>
    @if(CheckAdminPower("sysrole/updateroute", true))
    {
        <a class="btn btn-primary pull-right" onclick="update()" id="a_update_route">更新系统路由表</a>
    }
}
<!--路径导航 end-->
 
<!--Main Body-->

<div class="row">
    <div class="col-sm-2">
        @if (CheckAdminPower("sysrole/edit", true))
        {
        @:<a class="btn btn-white" href="@Url.Action("Edit", "SysRole", new { Area = "Admin" })"><i class="glyphicon glyphicon-plus"></i> 添加</a>
        }
        @if (CheckAdminPower("sysrole/del", true))
        {
        @:<a class="btn btn-white" href="javascript:void(0)" onclick="del('/Admin/SysRole/Del',1)"><i class="glyphicon glyphicon-trash"></i> 删除</a>
        }
    </div>
    <div class="col-sm-4">
        <p></p>
    </div>
    <div class="col-sm-2">
        
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <input type="text" id="txt_word" value="@Model.word" placeholder="关键字" class="input-sm form-control">
            <span class="input-group-btn">
                <button type="button" class="btn btn-sm btn-primary" onclick="WordSearch()"> 搜索</button>
            </span>
        </div>
    </div>
</div>
<br>

@if(Model.DataList.Count >0)
{


<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" onclick="CheckAll(this)" txt="全选">
                </th>
                <th>ID</th>
                <th>组名</th>
                <th>是否管理组</th>
                <th>添加时间</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DataList)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="datacheck" hid="@item.ID">
                    </td>
                    <td>@item.ID</td>
                    <td><a href="/Admin/SysRole/Edit?id=@item.ID">@item.RoleName</a></td>
                    <td><i class="glyphicon glyphicon-@(item.IsAdmin ? "ok": "remove")"></i></td>
                    <td>@item.AddTime</td>
                    <td>
                        <a class="btn btn-sm btn-white" href="/Admin/SysRole/Edit?id=@item.ID"><i class="glyphicon glyphicon-edit"></i> 修改</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="am-cf">
        每页 <input type="number"cname="sysroleindex" value="@Model.page_size" id="txt_page_size" style="width:40px;" onchange="SetPageSize(this)" /> 条数据 共 @Model.total 条记录
        <div class="pull-right">
            <div id="pager"></div>
        </div>
    </div>
</div>


}else
{
    <p><h2>没有相关数据</h2></p>
}

<!-- Main Body end -->

<!--底部脚本-->
@section foot
{
<script src="~/Assets/js/plugins/layer/laypage/laypage.js"></script>
<script>
    @if (CheckAdminPower("sysrole/updateroute", true))
    {
        <text>
        function update()
        {
            $("#a_update_route").attr('disabled',"true");
            $("#a_update_route").text("更新中....");
            $.post("/admin/SysRole/UpdateRoute", { "a":1 }, function (result) {
                $("#a_update_route").removeAttr("disabled");
                if(result.msg == 1)
                {
                    $("#a_update_route").text("更新完毕");
                }
                else
                {
                    $("#a_update_route").text("更新失败!");
                }
                
            });
        }
        </text>
    }

function WordSearch()
    {
    if($("#txt_word").val().length==0)
        {
            location.href = "?page=1";
        }
        else
        {
            location.href = "?page=1&role=0&word="+encodeURIComponent($("#txt_word").val());
        }

    }

    laypage({
        cont: 'pager',
        pages: @Model.total_page,
        skin:"#0e90d2",
        curr: function () {
            var page = location.search.match(/page=(\d+)/);
            return page ? page[1] : 1;
        }(),
        jump: function (e, first) { //触发分页后的回调
            if (!first) { //一定要加此判断，否则初始时会无限刷新
                location.href = '?page=' + e.curr;
            }
        }
    });
</script>
}

<!--底部脚本 end-->