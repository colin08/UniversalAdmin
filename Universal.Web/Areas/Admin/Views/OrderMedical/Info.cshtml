@model Universal.Entity.OrderMedical
@{
    ViewBag.Title = "订单详情";
}

<!--头部脚本-->
@section head
{

    <style type="text/css">
        .label_msg{
            color:#000000 !important;
        }
        .clients-list{
            margin-top:0 !important;
        }
    </style>
}

<!--头部脚本 end-->
<!--Panel-->
@section nav
{
    <div class="ibox-title">
        <h5>体检套餐订单详情</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="glyphicon glyphicon-arrow-left" onclick="javascript: window.history.go(-1)"></i>
            </a>
        </div>
    </div>
}
<!--Panel end-->
<!-- 路径导航 -->
<div class="row">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li><a href="/Admin/Home/Center">主页</a></li>
            <li><a href="@Url.Action("Index", "OrderMedical", new { Area = "Admin" })">体检套餐订单列表</a></li>
            <li><strong>订单详情</strong></li>
        </ol>
    </div>

    <div style="height: 40px;"></div>
</div>
<!-- 路径导航 end -->
<!--Main Body-->
<div class="clients-list">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#tab-1">基本信息</a></li>
        <li><a data-toggle="tab" href="#tab-2">预约用户资料</a></li>
        <li><a data-toggle="tab" href="#tab-3">套餐内项目</a></li>
        <li><a data-toggle="tab" href="#tab-4">额外自选项目</a></li>
    </ul>
    <form class="form-horizontal">

        <div class="tab-content">
            <div id="tab-1" class="tab-pane active">
                <div style="margin-top:20px;"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">订单号</label>

                    <label class="col-sm-3 label_msg">@Model.OrderNum</label>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">订单时间</label>

                    <label class="col-sm-3 label_msg">@Model.AddTime.ToString("yyyy-MM-dd HH:mm")</label>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">订单状态</label>

                    <label class="col-sm-3 label_msg">@Model.GetStatusStr</label>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">支付方式</label>

                    <label class="col-sm-3 label_msg">@Model.GetPayTypeStr</label>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">支付时间</label>
                    <label class="col-sm-3 label_msg">@Model.GetPayTimeStr</label>                   
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">订单金额</label>

                    <label class="col-sm-3 label_msg">@Model.Amount.ToString("F2")</label>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">实付金额</label>

                    <label class="col-sm-3 label_msg">@Model.RelAmount.ToString("F2")</label>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">所属套餐</label>

                    <label class="col-sm-3 label_msg">@Model.Title</label>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">套餐原价</label>

                    <label class="col-sm-3 label_msg">@Model.MYPrice.ToString("F2")</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">套餐优惠价</label>

                    <label class="col-sm-3 label_msg">@Model.MPrice.ToString("F2")</label>
                </div>
                <div class="hr-line-dashed"></div>

            </div>

            <div id="tab-2" class="tab-pane">
                <div style="margin-top:20px;"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">预约用户姓名</label>

                    <label class="col-sm-3 label_msg">@Model.RealName</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">预约日期</label>

                    <label class="col-sm-3 label_msg">@Model.YuYueDate.ToString("yyyy-MM-dd HH:mm")</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">性别</label>

                    <label class="col-sm-3 label_msg">@Model.GetGenderStr</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">出生年月日</label>

                    <label class="col-sm-3 label_msg">@Model.Brithday.ToString("yyyy-MM-dd")</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">身份证号码</label>

                    <label class="col-sm-3 label_msg">@Model.IDCardNumber</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">手机号码</label>

                    <label class="col-sm-3 label_msg">@Model.Telphone</label>
                </div>
                <div class="hr-line-dashed"></div>
                                
            </div>

            <div id="tab-3" class="tab-pane">
                <div style="margin-top:20px;"></div>
                @foreach (var item in Model.OrderMedicalItems.Where(p => p.Type == Universal.Entity.OrderMedicalItemType.套餐内).ToList())
                {
                    <div class="form-group">
                        <label class="col-sm-2 control-label">项名称</label>

                        <label class="col-sm-3 label_msg">@item.Title</label>
                    </div>

                    <div class="hr-line-dashed"></div>
                }

            </div>

            <div id="tab-4" class="tab-pane">
                <div style="margin-top:20px;"></div>
                @foreach (var item in Model.OrderMedicalItems.Where(p=>p.Type == Universal.Entity.OrderMedicalItemType.额外自选).ToList())
                {
                    <div class="form-group">
                        <label class="col-sm-2 control-label">项名称</label>

                        <label class="col-sm-3 label_msg">@item.Title</label>
                    </div>

                    <div class="hr-line-dashed"></div>
                }

            </div>


        </div>
    </form>
</div>

<!-- Main Body end-->
<!--底部脚本-->
@section foot
{
    <script>

    </script>
}
<!--底部脚本 end-->
