@model Universal.Web.Areas.Admin.Models.ViewModelOrderMedicalList
@{
    ViewBag.Title = "体检套餐订单列表";
}

<!--头部脚本-->
@section head
{

}
<!--头部脚本 end-->
<!-- Panel -->
@section nav
{
    <div class="ibox-title">
        <h5>体检套餐订单列表</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-refresh" onclick="javascript: location.reload()"></i>
            </a>
        </div>
    </div>

}
<!--Panel end-->
<!--路径导航-->
<div class="row">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li><a href="/Admin/Home/Center">主页</a></li>
            <li><a href="/Admin/OrderMedical/Index">体检套餐订单列表</a></li>
            <li><strong>订单列表</strong></li>
        </ol>
    </div>

    <div style="height: 40px;"></div>
</div>
<!-- 路径导航 end -->
<!--Main Body-->

<div class="row">
    <div class="col-sm-2">
        @if (CheckAdminPower("Medical/del", true))
        {
            @:<a class="btn btn-white" href="javascript:void(0)" onclick="del('/Admin/Medical/Del',1)"><i class="glyphicon glyphicon-ban-circle"></i> 禁用</a>
        }
    </div>
    <div class="col-sm-2">
        <p></p>
    </div>
    <div class="col-sm-2">
        @Html.DropDownListFor(p => p.role, ViewData["StatusList"] as List<SelectListItem>, new { @class = "input-sm form-control", onchange = "Search()" })
    </div>
    <div class="col-sm-2">
        @Html.DropDownListFor(p => p.role2, ViewData["PayTypeList"] as List<SelectListItem>, new { @class = "input-sm form-control", onchange = "Search()" })
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <input type="text" id="txt_word" value="@Model.word" placeholder="关键字" onkeydown="KeyDown('Search()')" class="input-sm form-control">
            <span class="input-group-btn">
                <button type="button" class="btn btn-sm btn-info" onclick="Search()"> 搜索</button>
            </span>
        </div>
    </div>
</div>

<br />

@if (Model.DataList.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" onclick="CheckAll(this)" txt="全选">
                    </th>
                    <th>订单号</th>
                    <th>套餐名称</th>
                    <th>状态</th>
                    <th>支付方式</th>
                    <th>实付金额</th>
                    <th>预约用户名</th>
                    <th>预约日期</th>
                    <th>下单时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DataList)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="datacheck" hid="@item.ID">
                        </td>
                        <td>@item.OrderNum</td>
                        <td>@item.Title</td>
                        <td>@item.GetStatusStr</td>
                        <td>@item.GetPayTypeStr</td>
                        <td>@item.RelAmount.ToString("F2")</td>
                        <td>@item.RealName</td>
                        <td>@item.YuYueDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.AddTime.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (item.CanDone)
                            {
                                <a class="btn btn-sm btn-white" href="/Admin/OrderMedical/Info?id=@item.ID"><i class="glyphicon glyphicon-add"></i> 设置完成</a>
                            }
                            <a class="btn btn-sm btn-white" href="/Admin/OrderMedical/Info?id=@item.ID"><i class="glyphicon glyphicon-edit"></i> 详情</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="am-cf">
            每页 <input type="number" cname="@WorkContext.PageKeyCookie" value="@Model.page_size" id="txt_page_size" style="width:40px;" onchange="SetPageSize(this)" /> 条数据 共 @Model.total 条记录
            <div class="pull-right">
                <div id="pager"></div>
            </div>
        </div>
    </div>
}
else
{
    <p id="pager"><h2>没有相关数据</h2></p>
}
<!-- Main Body end -->
<!--底部脚本-->
@section foot
{
    @Scripts.Render("~/bundles/laypage")
    <script type="text/javascript">
    function Search()
    {
        location.href = "?page=1&role="+$("#role1").val()+"&role2="+$("#role2").val()+"&word="+encodeURIComponent($("#txt_word").val());
    }

    laypage({
        cont: 'pager',
        pages: @Model.total_page,
        skin:"#0e90d2",
        curr: function () {
            var page = location.search.match(/page=(\d+)/);
            return page ? page[1] : 1;
        }(),
        jump: function (e, first) { //触发分页后的回调
            if (!first) { //一定要加此判断，否则初始时会无限刷新
                location.href = '?page=' + e.curr;
            }
        }
    });
    </script>
}

<!--底部脚本 end-->