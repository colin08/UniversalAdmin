@model List<Universal.Entity.OrderMedical>
@{
    ViewBag.Title = "我的订单列表";
}

<!-- 头部Style等 -->
@section htmlhead{   

<style>
    a { color: #000000; }

    .custom-card { margin: 10px 5px !important; }

    .money { color: #F5A623; font-size: 18px; }
</style>

}
<!-- 头部Style等 END -->


<!-- MUI 头部导航栏设置 -->
@section muiheader{
<div class="mui-navbar-inner mui-bar mui-bar-nav">
    <h1 class="mui-center mui-title">订单列表</h1>
    <button type="button" onclick="location.href='Index'" class="mui-btn mui-btn-blue mui-btn-link mui-pull-right">购买套餐</button>
</div>

}
<!-- MUI 头部导航栏设置 END -->


<!-- Body -->

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="mui-card custom-card">
            <div class="mui-card-header">
                <a onclick="location.href = 'OrderInfo?o=@item.OrderNum'">@item.Title</a>
                @if(item.Status == Universal.Entity.OrderStatus.临时订单)
                {
                    <button class="mui-btn-success mui-btn-outlined" onclick="location.href='GoBuy?mid=@item.MedicalID&o=@item.OrderNum&back=/MP/Medical/OrderList'">继续操作</button>
                }
                else if (item.Status == Universal.Entity.OrderStatus.已取消)
                {
                    <button class="mui-btn mui-btn-outlined" disabled>已取消</button>
                }
                else if (item.Status == Universal.Entity.OrderStatus.已完成)
                {
                    <button class="mui-btn mui-btn-outlined" disabled>已完成</button>
                }
                else if (item.Status == Universal.Entity.OrderStatus.已支付)
                {
                    <button class="mui-btn mui-btn-outlined" disabled>已支付</button>
                }
                else if (item.Status == Universal.Entity.OrderStatus.等待支付)
                {
                    <button class="mui-btn-warning mui-btn-outlined" onclick="location.href='/MP/Pay/OrderMedical?o=@item.OrderNum&back=/MP/Medical/OrderList'">前往支付</button>
                }
            </div>
            <div class="mui-card-header mui-card-media" onclick="location.href = 'OrderInfo?o=@item.OrderNum'" style="height:40vw;background-image:url(@item.ImgUrl)"></div>
            <div class="mui-card-content">
            </div>
            <div class="mui-card-footer">
                <a>订单号:@item.OrderNum <span style="font-size: 12px; color:rgba(0,0,0,0.5)">(@item.AddTime.ToString("yyyy/MM/dd HH:mm"))</span></a>
                <a class="money">￥@item.RelAmount.ToString("F2")</a>
            </div>
        </div>
    }
}
else
{
    <p style="width: 100%; text-align: center; margin-top: 30px; font-size: 20px;">没有相关数据</p>
}

<!-- Body END -->


<!-- MUI 底部导航栏设置 -->
@section muifooter{


}
<!-- MUI 底部导航栏设置 END -->



<!-- MUI 页面底部脚本 -->
@section htmlfoot{
@if(Model.Count>2)
{
@:<div class="mui-bar-footer mui-text-center" style="width: 100%;">
}else
{
@:<div class="mui-bar-footer mui-text-center" style="position:fixed; width: 100%;">
}

<p>@Html.Partial("~/Areas/MP/Views/Shared/_Copyright.cshtml")</p>
</div>
}
<!-- MUI 页面底部脚本 END -->

